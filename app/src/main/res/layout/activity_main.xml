<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".ui.activitys.MainActivity">


    <Button
        android:id="@+id/button_cardapio"
        android:layout_width="189dp"
        android:layout_height="105dp"
        android:text="Cardapio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25sp"
        android:background="@color/black"
        app:layout_goneMarginTop="10sp" />

    <Button
        android:id="@+id/button_pedido"
        android:layout_width="189dp"
        android:layout_height="105dp"
        android:layout_margin="8dp"
        android:textSize="25sp"
        android:text="Fazer Pedido"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/button_cardapio"
        app:layout_constraintStart_toStartOf="@+id/button_cardapio"
        app:layout_constraintTop_toBottomOf="@+id/button_cardapio" />
</androidx.constraintlayout.widget.ConstraintLayout>